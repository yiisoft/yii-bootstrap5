{
    "name": "yiisoft/yii-bootstrap5",
    "type": "library",
    "description": "Yii Framework Twitter Bootstrap 5 Extension",
    "keywords": [
        "yii",
        "bootstrap5"
    ],
    "license": "BSD-3-Clause",
    "support": {
        "source": "https://github.com/yiisoft/yii-bootstrap5",
        "issues": "https://github.com/yiisoft/yii-bootstrap5/issues",
        "forum": "https://www.yiiframework.com/forum/",
        "wiki": "https://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "chat": "https://t.me/yii3en"
    },
    "provide": {
        "yiisoft/yii-bootstrap": "1.0"
    },
    "require": {
        "php": "^8.0",
        "npm-asset/bootstrap": "^5.0.0",
        "oomphinc/composer-installers-extender": "^2.0.0",
        "yiisoft/arrays": "^1.0|^2.0|^3.0",
        "yiisoft/assets": "^2.0",
        "yiisoft/files": "^2.0",
        "yiisoft/html": "^3.0",
        "yiisoft/json": "^1.0",
        "yiisoft/widget": "^1.0"
    },
    "require-dev": {
        "maglnet/composer-require-checker": "^4.3",
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^0.15.0",
        "roave/infection-static-analysis-plugin": "^1.16",
        "spatie/phpunit-watcher": "^1.23",
        "vimeo/psalm": "^4.18",
        "yiisoft/aliases": "^1.1|^2.0",
        "yiisoft/di": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\Yii\\Bootstrap5\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\Yii\\Bootstrap5\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        },
        "config-plugin-options": {
            "source-directory": "config"
        },
        "config-plugin": {
            "params": "params.php"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true,
            "composer/package-versions-deprecated": true,
            "composer/installers": true,
            "oomphinc/composer-installers-extender": true
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "scripts": {
        "test": "phpunit --testdox --no-interaction",
        "test-watch": "phpunit-watcher watch"
    }
}
