{
    "name": "yiisoft/yii-bootstrap5",
    "type": "library",
    "description": "Yii Framework Twitter Bootstrap 5 Extension",
    "keywords": [
        "yii",
        "bootstrap5"
    ],
    "license": "BSD-3-Clause",
    "support": {
        "source": "https://github.com/yiisoft/yii-bootstrap5",
        "issues": "https://github.com/yiisoft/yii-bootstrap5/issues",
        "forum": "http://www.yiiframework.com/forum/",
        "wiki": "http://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "provide": {
        "yiisoft/yii-bootstrap": "1.0"
    },
    "require": {
        "php": "^7.4|^8.0",
        "npm-asset/bootstrap": "^5.0.0",
        "oomphinc/composer-installers-extender": "^2.0.0",
        "yiisoft/arrays": "^1.0",
        "yiisoft/assets": "^1.0@dev",
        "yiisoft/html": "^1.0",
        "yiisoft/json": "^1.0",
        "yiisoft/widget": "^3.0@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "roave/infection-static-analysis-plugin": "^1.5",
        "spatie/phpunit-watcher": "^1.23",
        "vimeo/psalm": "^4.2",
        "yiisoft/aliases": "^1.0",
        "yiisoft/di": "^3.0@dev"
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\Yii\\Bootstrap5\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\Yii\\Bootstrap5\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        },
        "config-plugin-options": {
            "source-directory": "config"
        },
        "config-plugin": {
            "params": "params.php",
            "web": "web/*.php"
        }
    },
    "config": {
        "sort-packages": true
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "scripts": {
        "test": "phpunit --testdox --no-interaction",
        "test-watch": "phpunit-watcher watch"
    }
}
